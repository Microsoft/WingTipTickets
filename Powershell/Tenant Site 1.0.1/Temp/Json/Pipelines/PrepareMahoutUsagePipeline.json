{
  "name": "PrepareMahoutUsagePipeline",
  "properties": {
    "description": "This is a pipeline to prepare the data for feeding into the Mahout engine",
    "start": "2015-01-01T00:00:00Z",
    "end": "2016-01-01T00:00:00Z",
    "activities": [
      {
        "name": "PrepareMahoutInputHiveActivity",
        "inputs": [
          {
            "name": "PartitionedProductsUsageTable"
          }
        ],
        "outputs": [
          {
            "name": "MahoutInputProductsUsageTable"
          }
        ],
        "linkedServiceName": "HDInsightLinkedService",
        "type": "HDInsightHive",
        "typeProperties": {
          "scriptpath": "scripts\\preparemahoutinput.hql",
          "scriptLinkedService": "StorageLinkedService",
          "defines": {
            "MAHOUTINPUT": "$$Text.Format('wasb://productrec@julieandtheplantes.blob.core.windows.net/mahoutinput/yearno={0:yyyy}/monthno={0:%M}/', SliceStart)",
            "PARTITIONEDOUTPUT": "$$Text.Format('wasb://productrec@julieandtheplantes.blob.core.windows.net/partitionedusageevents/yearno={0:yyyy}/monthno={0:%M}/', SliceStart)"
          }
        },
        "policy": {
          "concurrency": 1,
          "executionPriorityOrder": "NewestFirst",
          "retry": 1,
          "timeout": "01:00:00"
        }
      }
    ]
  }
}
